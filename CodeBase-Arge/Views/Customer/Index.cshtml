@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CodeBase.Core.DTOs
@model List<ProductWithCustomerDTO>
<div class="col mt-3">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Mail</td>
                <td>Product Name</td>
                <td>Product Quantity</td>
                <td>Aksiyonlar</td>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Mail</td>
                    <td>@item.Products.Name</td>
                    <td>@item.ProductQuantity</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Customer" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Customer" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfood>
            <tr>
                <td>ID</td>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Mail</td>
                <td>Product Name</td>
                <td>Product Quantity</td>
                <td>Aksiyonlar</td>
                <td><a class="btn btn-primary" asp-controller="Customer" asp-action="Save">Add Order</a></td>
            </tr>
        </tfood>
    </table>
</div>


