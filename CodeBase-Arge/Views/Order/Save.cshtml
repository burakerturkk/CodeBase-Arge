@using CodeBase.Core.DTOs

@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model OrderDTO

<div class="col-md-5">

    <form asp-action="Save" method="post" asp-controller="Order">

        <label>ProductID</label>
        <input asp-for="ProductId" class="form-control" required />
        <span asp-validation-for="ProductId" class="text-danger"></span>

         <label>CustomerID</label>
        <input asp-for="CustomerId" class="form-control" required />
        <span asp-validation-for="CustomerId" class="text-danger"></span>

         <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>

     

        <br />
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </form>
</div>


